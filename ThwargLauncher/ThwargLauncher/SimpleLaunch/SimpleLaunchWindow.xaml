<Window x:Name="ThwargLauncherSimpleLaunchWindow" x:Class="ThwargLauncher.SimpleLaunchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:twg="clr-namespace:ThwargControls"
        xmlns:ff="clr-namespace:FunctionalFun.UI"
        xmlns:local="clr-namespace:ThwargLauncher"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="LinLauncher - Intelligent Account Management" Icon="../Images/ThwargLogo.ico" Height="400" Width="650" 
        ResizeMode="CanResizeWithGrip" Closing="ThwargLauncherSimpleLaunchWindow_Closing">
    <Window.Background>
        <ImageBrush ImageSource="../Images/backgrounds/acwallpaperwideaerbax.jpg"/>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
        <RoutedUICommand x:Key="LaunchGameCommand" />
        <local:BoolToVisibilityConverter
            x:Key="BoolToVisConverter"
            TrueValue="Visible" FalseValue="Hidden" />
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource LaunchGameCommand}" Executed="LaunchGameCommand" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{StaticResource LaunchGameCommand}" />
    </Window.InputBindings>
    <Grid x:Name="ContentGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="81*"></ColumnDefinition>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,0,1,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="55" ></RowDefinition>
            </Grid.RowDefinitions>
            <Rectangle x:Name="rctBlack" Grid.RowSpan="2" Fill="Black" Margin="1,1,1,0" Stroke="Black" Opacity="0.5"/>
            <ListBox x:Name="cmbServerList"
                      ItemsSource="{Binding Path=Servers, Mode=OneWay}"
                      SelectedItem="{Binding Path=SelectedServer}"
                     IsSynchronizedWithCurrentItem="True" VerticalAlignment="Top" Margin="5,29,5,0"
                      Background="#A5000000" Foreground="#FFDC9700">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="0" Padding="5">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Visibility="{Binding HasDiscordURL, Converter={StaticResource BoolToVisConverter}}">
                                        <Hyperlink ToolTip="{Binding Path=DiscordUrl}" NavigateUri="{Binding Path=DiscordUrl}" RequestNavigate="RequestNavigateHandler" TextDecorations="None">
                                            <Image Width="24px" Height="24px" Source="../Images/32pxDiscord.png" />
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Path=EMU}" Foreground="Orange" />
                                    <TextBlock Text="{Binding Path=ServerName,StringFormat=' - {0} '}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Foreground="{Binding Path=ConnectionColor}" Text="{Binding Path=ConnectionStatus}" FontWeight="Bold" HorizontalAlignment="Left"/>
                                    <TextBlock Text=" " />
                                    <TextBlock Text="{Binding Path=ServerIpAndPort}" FontStyle="Italic" />
                                </StackPanel>
                                <TextBlock Text="{Binding Path=ServerDescription}" FontStyle="Italic" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label x:Name="lblServers" Content="Servers" VerticalAlignment="Top" Foreground="#FFFFB619" BorderBrush="Black" FontFamily="Stonehenge" HorizontalAlignment="Center" FontSize="18" Margin="0,-2,0,0" Height="33" Width="62"/>
            <TextBox x:Name="txtLauncherLocation" Text="{Binding ClientFileLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="Double Click to Browse" Height="23" Margin="5,0,65,7" TextWrapping="Wrap" VerticalAlignment="Bottom" Foreground="Black" MouseDoubleClick="txtLauncherLocation_MouseDoubleClick" Background="#FFF6D18F" Grid.Row="1"/>
            <Button x:Name="btnLauncherLocation" Content="..." ToolTip="Browse" Command="{Binding ConfigureFileLocationCommand}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="55" Margin="0,0,5,7" Foreground="Black" Height="23" Background="#FFF6D18F" FontWeight="Bold" Grid.Row="1"/>
            <Label x:Name="lblLauncherLocation" Content="Client Location:" Foreground="#FFFFB619" BorderBrush="Black" FontFamily="Stonehenge" VerticalAlignment="Bottom" Height="24" Margin="2,0,0,31" FontSize="13" HorizontalAlignment="Left" Grid.Row="1" Width="93"/>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Rectangle x:Name="rctBlack2" Grid.RowSpan="2" Fill="Black" Margin="1,1,0,0" Stroke="Black" Opacity="0.5"/>
            <Grid Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="161*"/>
                    <RowDefinition Height="223*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtUserName"
                         Text="{Binding Path=AccountName, Mode=TwoWay}" VerticalAlignment="Top" Margin="5,25,5,0" Height="18" />
                <TextBox x:Name="txtUserPasswordText" Text="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Margin="5,65,5,0" Visibility="{Binding Path=TextPasswordBoxVisibility}" Height="18" />
                <PasswordBox x:Name="txtUserPassword" ff:PasswordBoxAssistant.BindPassword="True"
                         ff:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5,65,5,0" Visibility="{Binding Path=PasswordBoxVisibility}" Height="18" />

                <ListBox x:Name="UserSelection"
                         Margin="5,124,5,35"
                         ItemsSource="{Binding AccountList}" SelectedItem="{Binding SelectedAccount}" Grid.RowSpan="2" FontFamily="Palatino Linotype" FontSize="13">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AccountDisplayName}">
                                <TextBlock.InputBindings>
                                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.ChooseAccount}"/>
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Label x:Name="lblUserPassword" Content="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Foreground="#FFFFB619" BorderBrush="Black" FontFamily="Palatino Linotype" Height="25" Width="61" />
                <Button x:Name="btnLaunch" VerticalAlignment="Top" Margin="10,91,123,0" Content="Launch" Click="btnLaunch_Click" Background="#FFF6D18F" FontFamily="Palatino Linotype" FontSize="13" FontWeight="Bold" Height="22" />
                <Label x:Name="lblUserName" Content="Username" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFFFB619" BorderBrush="Black" FontFamily="Palatino Linotype" Height="25" Width="65" />
                <CheckBox x:Name="chkUserDecal"
                      Foreground="#FFFFB619" BorderBrush="Black"
                      IsChecked="{Binding UseDecal}"
                      IsEnabled="{Binding UseDecalEnabled}"
                      Content="Decal Injection" HorizontalAlignment="Right" Margin="0,87,11,0" VerticalAlignment="Top" RenderTransformOrigin="0.197,-0.553" Height="14" Width="104" FontFamily="Palatino Linotype"/>
                <CheckBox x:Name="chkShowPassword"
                      Foreground="#FFFFB619" BorderBrush="Black"
                      IsChecked="{Binding ShowPassword}"
                      Content="Show Password" HorizontalAlignment="Right" Margin="0,103,11,0" VerticalAlignment="Top" RenderTransformOrigin="0.197,-0.553" Height="15" Width="104" FontFamily="Palatino Linotype"/>
                <Button x:Name="btnBrowseServers" Content="Browse Servers" ToolTip="Add a Server" Command="{Binding BrowseServersCommand}" HorizontalAlignment="Left" Margin="5,0,0,8" VerticalAlignment="Bottom" Foreground="Black" Background="#FFF6D18F" Height="20" FontFamily="Palatino Linotype" FontWeight="Bold" Width="88" Grid.Row="1"/>
                <Button x:Name="btnMain" Command="{Binding GotoMainViewCommand}" Content="Advanced View" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#FFF6D18F" FontWeight="Bold" FontFamily="Palatino Linotype" Height="20" Grid.Row="1" Margin="0,0,10,8" />

            </Grid>
            <CheckBox x:Name="ShowHide" Visibility="Collapsed" HorizontalAlignment="Left" Margin="317,0,0,0" VerticalAlignment="Center" Foreground="#FFFFB619" Checked="ShowHide_Checked" Height="0" Width="0">Show/Hide</CheckBox>
        </Grid>
    </Grid>
</Window>
