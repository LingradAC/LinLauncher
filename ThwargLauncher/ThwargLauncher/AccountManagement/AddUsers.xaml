<Window x:Class="ThwargLauncher.AddUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Accounts" Height="320" Width="280" MinHeight="320" MinWidth="280" Icon="../Images/ThwargLogo.ico" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/ACCoverArt.jpg" Opacity="0.3"/>
        </Grid.Background>

        <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Left" Margin="5,8,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="Black" FontFamily="Stonehenge" FontSize="16"/>

        <TextBox x:Name="txtUser1" TabIndex="0" HorizontalAlignment="Left" Height="23" Margin="7,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtUser2" TabIndex="2" HorizontalAlignment="Left" Height="23" Margin="7,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtUser3" TabIndex="4" HorizontalAlignment="Left" Height="23" Margin="7,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtUser4" TabIndex="6" HorizontalAlignment="Left" Height="23" Margin="7,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtUser5" TabIndex="8" HorizontalAlignment="Left" Height="23" Margin="7,196,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>

        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Right" Margin="0,8,5,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Stonehenge" FontSize="16"/>
        <TextBox x:Name="txtPassword1" TabIndex="1" HorizontalAlignment="Right" Height="23" Margin="0,36,7,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtPassword2" TabIndex="3" HorizontalAlignment="Right" Height="23" Margin="0,76,7,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtPassword3" TabIndex="5" HorizontalAlignment="Right" Height="23" Margin="0,116,7,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtPassword4" TabIndex="7" HorizontalAlignment="Right" Height="23" Margin="0,156,7,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtPassword5" TabIndex="9" HorizontalAlignment="Right" Height="23" Margin="0,196,7,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127"/>

        <Button x:Name="btnAdd" TabIndex="10" Content="Add Accounts" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="80" Click="btnAdd_Click" IsDefault="True" FontFamily="Palatino Linotype"/>
        <Button x:Name="btnCancel" TabIndex="11" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="80" Click="btnCancel_Click" IsCancel="True" FontFamily="Palatino Linotype"/>


    </Grid>
</Window>
